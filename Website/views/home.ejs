<!-- views/home.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        header {
            background-color: #3910e1;
            padding: 10px;
            text-align: center;
        }

        footer {
            background-color: #3910e1;
            padding: 10px;
            text-align: center;
        }

        .middle-layer {
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 2 * 20px); /* Adjust for header and footer heights */
        }

        .row {
            flex: 1;
            display: flex;
        }

        .col {
            flex: 1;
            border: 1px solid #ddd;
            overflow: hidden;
            padding: 10px; /* Adjust padding as needed */
        }

        .col-20 {
            flex: 20;
        }

        .col-80 {
            flex: 90;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        header nav {
            display: flex;
            justify-content: left;
            margin-top: 10px;
        }
        header a {
            color: white;
            text-decoration: none;
            margin: 0 20px;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        header a:hover {
            background-color: #1a0b68;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to the world</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
        </nav>
        
    </header>
    
    <div class="middle-layer">
        <div class="row">
            <div class="col col-20">
                <%- include('country.ejs') %> 
            </div>
            <div class="col col-80">
                <% if (typeof selectedCountry !== 'undefined' && selectedCountry !== null) { %>
                    <h2>Cities in <%= selectedCountry %></h2>
                    <%- include('cities.ejs', { citiesData: citiesData }) %> <!-- Pass citiesData to cities.ejs -->
                <% } else { %>
                    <p>Select a country to filter cities.</p>
                <% } %>
            </div>
        </div>
    </div>

    <footer>
        <!-- Footer content goes here -->
        <p>Created by Kunal</p>
    </footer>
</body>
</html>
